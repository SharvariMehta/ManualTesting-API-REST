	"info": {
		"_postman_id": "c80ae7cd-08ff-4e7e-ba43-508abde47b94",
		"name": "REST API Project",
		"description": "This project validates the Restful-Booker API, a hotel booking service supporting CRUD operations, authentication, and multiple data formats (JSON, XML, URL-encoded).\n\nIt includes positive, negative, and boundary testing along with error handling and verifies unique behaviors like the 10-minute auto-reset.\n\nManual (Postman) approach is applied to ensure functional reliability.",
		"schema": "https://schema.getpostman.com/json/collection/v2.0.0/collection.json"
	},
	"item": [
		{
			"name": "TC1_Generate_Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "77d8bd6b-6fa2-4db1-84b9-2dbca8ee9433",
						"exec": [
							"// ---------------------- Basic Checks ----------------------\r",
							"\r",
							"// ✅ Status Code\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// ✅ Response Time\r",
							"pm.test(\"Response time is under 1000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});\r",
							"\r",
							"// ✅ Response Body Exists\r",
							"pm.test(\"Response body is not empty\", function () {\r",
							"    pm.expect(pm.response.text()).to.not.be.empty;\r",
							"});\r",
							"\r",
							"\r",
							"// ---------------------- Body & Key Validation ----------------------\r",
							"\r",
							"let jsonData;\r",
							"try {\r",
							"    jsonData = pm.response.json();\r",
							"} catch (e) {\r",
							"    pm.test(\"Response is valid JSON\", function () {\r",
							"        pm.expect.fail(\"Response is not valid JSON\");\r",
							"    });\r",
							"}\r",
							"\r",
							"// ✅ Schema Validation\r",
							"const schema = {\r",
							"    \"type\": \"object\",\r",
							"    \"properties\": {\r",
							"        \"token\": { \"type\": \"string\" }\r",
							"    },\r",
							"    \"required\": [\"token\"]\r",
							"};\r",
							"\r",
							"pm.test(\"Schema validation\", function () {\r",
							"    pm.expect(tv4.validate(jsonData, schema)).to.be.true;\r",
							"});\r",
							"\r",
							"// ✅ Keys Validation (no extra/missing keys)\r",
							"pm.test(\"Response has only expected keys\", function () {\r",
							"    const expectedKeys = [\"token\"];\r",
							"    pm.expect(Object.keys(jsonData)).to.eql(expectedKeys);\r",
							"});\r",
							"\r",
							"// ✅ Missing Key\r",
							"pm.test(\"Token key should not be missing\", function () {\r",
							"    pm.expect(jsonData).to.have.property(\"token\");\r",
							"});\r",
							"\r",
							"// ✅ Duplicate Key (JSON doesn’t allow duplicates, simulate by checking)\r",
							"pm.test(\"No duplicate keys present\", function () {\r",
							"    let keys = Object.keys(jsonData);\r",
							"    let uniqueKeys = [...new Set(keys)];\r",
							"    pm.expect(keys.length).to.eql(uniqueKeys.length);\r",
							"});\r",
							"\r",
							"// ✅ Data Validation\r",
							"pm.test(\"Token is a valid non-empty string\", function () {\r",
							"    pm.expect(jsonData.token).to.be.a(\"string\").and.not.empty;\r",
							"});\r",
							"\r",
							"\r",
							"// ---------------------- Header & Cookies ----------------------\r",
							"\r",
							"// ✅ Headers\r",
							"pm.test(\"Content-Type header is application/json\", function () {\r",
							"    pm.response.to.have.header(\"Content-Type\");\r",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");\r",
							"});\r",
							"\r",
							"// ✅ Cookies (Restful-Booker does not set cookies but we validate presence check)\r",
							"pm.test(\"No unexpected cookies\", function () {\r",
							"    pm.expect(pm.cookies.toObject()).to.be.an(\"object\");\r",
							"});\r",
							"\r",
							"// ✅ Auth Header not required in this endpoint\r",
							"pm.test(\"No Auth header required for /auth\", function () {\r",
							"    let authHeader = pm.request.headers.get(\"Authorization\");\r",
							"    pm.expect(authHeader).to.be.undefined;\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"id": "9c5da807-eba9-43ca-a1e4-50b09fe68212",
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
